# ============================================================================
# ARQUIVO DE EXEMPLO DE VARIÁVEIS DE AMBIENTE
# ============================================================================
# Copie este arquivo para .env e configure as variáveis para seu ambiente
# NUNCA commite o arquivo .env com valores reais!

# ============================================================================
# CONFIGURAÇÕES BÁSICAS
# ============================================================================

# Chave secreta do Django (OBRIGATÓRIO)
# Gere uma nova em: https://djecrety.ir/
SECRET_KEY=django-insecure-SUBSTITUA-POR-UMA-CHAVE-SEGURA

# Ambiente de execução (dev ou prod)
DJANGO_ENVIRONMENT=dev

# Debug (True apenas em desenvolvimento)
DEBUG=True

# Hosts permitidos (separados por vírgula)
ALLOWED_HOSTS=localhost,127.0.0.1

# ============================================================================
# CONFIGURAÇÕES DE BANCO DE DADOS (PRODUÇÃO)
# ============================================================================

# PostgreSQL para produção
DB_NAME=encanto_intimo_prod
DB_USER=seu_usuario_db
DB_PASSWORD=sua_senha_db
DB_HOST=localhost
DB_PORT=5432

# ============================================================================
# CONFIGURAÇÕES DE EMAIL
# ============================================================================

# Backend de email
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend

# Configurações SMTP
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=seu_email@gmail.com
EMAIL_HOST_PASSWORD=sua_senha_app
DEFAULT_FROM_EMAIL=noreply@encantointimo.com

# Email do administrador
ADMIN_EMAIL=admin@encantointimo.com

# ============================================================================
# CONFIGURAÇÕES DE PAGAMENTO
# ============================================================================

# Stripe - Desenvolvimento
STRIPE_TEST_PUBLISHABLE_KEY=pk_test_...
STRIPE_TEST_SECRET_KEY=sk_test_...

# Stripe - Produção
STRIPE_LIVE_PUBLISHABLE_KEY=pk_live_...
STRIPE_LIVE_SECRET_KEY=sk_live_...

# MercadoPago - Desenvolvimento
MERCADOPAGO_TEST_ACCESS_TOKEN=TEST-...
MERCADOPAGO_TEST_PUBLIC_KEY=TEST-...

# MercadoPago - Produção
MERCADOPAGO_LIVE_ACCESS_TOKEN=APP_USR-...
MERCADOPAGO_LIVE_PUBLIC_KEY=APP_USR-...

# ============================================================================
# CONFIGURAÇÕES DE ARMAZENAMENTO (AWS S3)
# ============================================================================

# Usar S3 para arquivos estáticos (apenas produção)
USE_S3=False

# Credenciais AWS
AWS_ACCESS_KEY_ID=sua_access_key
AWS_SECRET_ACCESS_KEY=sua_secret_key
AWS_STORAGE_BUCKET_NAME=encanto-intimo-bucket
AWS_S3_REGION_NAME=us-east-1

# ============================================================================
# CONFIGURAÇÕES DE CACHE (REDIS)
# ============================================================================

# URL do Redis para cache
REDIS_URL=redis://127.0.0.1:6379/1

# ============================================================================
# CONFIGURAÇÕES DE MONITORAMENTO
# ============================================================================

# Sentry DSN para monitoramento de erros (opcional)
SENTRY_DSN=https://seu_dsn@sentry.io/projeto

# ============================================================================
# EXEMPLOS DE CONFIGURAÇÃO POR AMBIENTE
# ============================================================================

# DESENVOLVIMENTO (.env.dev):
# DEBUG=True
# ALLOWED_HOSTS=localhost,127.0.0.1
# DB_NAME=encanto_intimo_dev
# EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# PRODUÇÃO (.env.prod):
# DEBUG=False
# ALLOWED_HOSTS=encantointimo.com,www.encantointimo.com
